# Production environment configuration for Raspberry Pi

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8765
SERVER_LOG_LEVEL=INFO

# CORS - Set to specific origin in production
SERVER_CORS_ORIGINS=http://raspberrypi.local,http://localhost

# Security
SERVER_AUTH_ENABLED=false
# SERVER_AUTH_TOKEN=your-secret-token-here

# Rate Limiting
SERVER_RATE_LIMIT_ENABLED=true
SERVER_RATE_LIMIT_REQUESTS=100
SERVER_RATE_LIMIT_WINDOW=60

# NFC Configuration
NFC_MOCK_MODE=false
NFC_SCAN_INTERVAL=0.5
NFC_SCAN_TIMEOUT=30
NFC_LOG_SCANS=true

# LED Configuration
LED_BRIGHTNESS=0.3
LED_MOCK_MODE=false