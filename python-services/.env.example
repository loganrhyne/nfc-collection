# NFC Collection Environment Configuration
# Copy this file to .env and update with your settings

# WebSocket Server Configuration
WS_HOST=0.0.0.0
WS_PORT=8765
WS_CORS_ORIGINS=*
# For production, use specific origins:
# WS_CORS_ORIGINS=http://localhost:3000,http://raspberrypi.local

# Security Settings
WS_AUTH_ENABLED=false
WS_AUTH_TOKEN=your-secret-token-here

# Rate Limiting
WS_RATE_LIMIT_ENABLED=true
WS_RATE_LIMIT_REQUESTS=100
WS_RATE_LIMIT_WINDOW=60

# WebSocket Settings
WS_HEARTBEAT_INTERVAL=30
WS_MAX_MESSAGE_SIZE=1048576

# NFC Hardware Configuration
NFC_MOCK_MODE=false
NFC_SPI_BUS=0
NFC_CS_PIN=D25
NFC_SCAN_TIMEOUT=30.0
NFC_SCAN_DEBOUNCE=3.0
NFC_WRITE_COOLDOWN=10.0
NFC_WRITE_RETRY_ATTEMPTS=3
NFC_WRITE_RETRY_DELAY=0.5
NFC_MAX_TAG_DATA_SIZE=144

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
# LOG_FILE=/var/log/nfc-collection/server.log
# LOG_MAX_BYTES=10485760
# LOG_BACKUP_COUNT=5